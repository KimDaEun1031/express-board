<%-include('./includes/header.ejs') %>
  <div class="update-post">
    <h1>게시물 수정</h1>
    <div class="update-post-header">
      <button
        class="back-btn"
        onclick="location.href='/board/post/<%=post._id%>'"
      >
        돌아가기
      </button>
    </div>
    <form
      action="/board/post/newpost/<%=post._id%>"
      method="post"
      class="update-post-form"
    >
      <div class="update-post-form-header">
        <input
          type="text"
          name="board_title"
          id="update-post-title"
          value="<%=post.board_title%>"
        />
        <span class="update-post-name">
          <%=post.author_name%>
        </span>
      </div>
      <textarea
        name="board_content"
        id="update-post-content"
        maxlength="1200"
      ><%=post.board_content%></textarea>
      <button
        type="submit"
        class="submit-btn"
      >
        완료
      </button>
    </form>
  </div>
<%-include('./includes/footer.ejs') %>